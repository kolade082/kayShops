<?xml version="1.0" encoding="utf-8"?>
<!--A scroll view is used because the register has a lot of content, so users can scroll up-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The RelativeLayout is used to contain all the UI elements on the screen. -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!-- The LinearLayout is used to contain the logo and app name on the top of the screen. -->
        <LinearLayout
            android:id="@+id/logos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/logoView"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shops"
                android:textSize="34sp"
                android:textStyle="italic"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="-25dp"/>

        </LinearLayout>

        <!-- The TextView is used to display the title of the screen. -->
        <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logos"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Sign Up !!!"
            android:textSize="34sp"
            android:textStyle="bold" />

        <!-- The EditText fields are used to input user information. -->

        <EditText
            android:id="@+id/edtFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleView"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="40dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:hint="Full Name" />


        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtFullName"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/edtDateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtPassword"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:drawableLeft="@drawable/baseline_cake_24"
            android:hint="Date of Birth" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtDateOfBirth"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:drawableLeft="@drawable/baseline_mail_24"
            android:hint="Email" />

        <EditText
            android:id="@+id/edtPhoneNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtEmail"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:hint="Phone Number" />

        <EditText
            android:id="@+id/edtAddressStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtPhoneNo"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:hint="Street Address " />

        <EditText
            android:id="@+id/edtAddressCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtAddressStreet"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:drawableLeft="@drawable/baseline_location_city_24"
            android:hint="City " />

        <EditText
            android:id="@+id/edtAddressCounty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtAddressCity"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:drawableLeft="@drawable/baseline_location_on_24"
            android:hint="County " />

        <EditText
            android:id="@+id/edtAddressPostCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtAddressCounty"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:drawableLeft="@drawable/baseline_house_24"
            android:hint="Post Code " />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/edtAddressPostCode"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:text="Sign Up"
            android:backgroundTint="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btnSignUp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:text="Login"
            android:backgroundTint="#2196F3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"/>
    </RelativeLayout>
</ScrollView>
